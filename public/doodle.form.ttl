@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix form:  <http://rdf.danielbeeke.nl/form/form-dev.ttl#> .
@prefix ex:    <https://example.org/#> .
@prefix hydra: <http://www.w3.org/ns/hydra/core#> .
@prefix :      <https://bellow2.ugent.be/test/dev/form/activity-form.ttl#> .

:form a form:Form ;
   hydra:endpoint <https://bellow2.ugent.be/test/dev/form/doodle.ttl> ;
   hydra:supportedClass [
       a hydra:Class ;
       hydra:method "PUT"
   ] ;
   form:binding ex:Doodle .

:participant
   a form:Field ;
   form:widget "group" ;
   form:binding ex:participant;
   form:multiple true ;
   form:order 1 .

:participantId
   a form:Field ;
   form:binding ex:participantId;
   form:widget "reference" ;
   form:label "Webid"@en ;
   form:group "participant" ;
   form:required true ;
   form:order 0 .

:date
   a form:Field ;
   form:binding ex:dates ;
   form:widget "group" ;
   form:group "participant" ;
   form:multiple true ;
   form:readonly true ;
   form:order 1 .

:date
   a form:Field ;
   form:binding ex:date ;
   form:widget "date" ;
   form:group "date" ;
   form:label "Dec 1"@en ;
   form:required true;
   form:readonly true ;
   form:order 0 .

:confirm
   a form:Field ;
   form:binding ex:confirm ;
   form:widget "checkbox" ;
   form:group "date" ;
   form:label "Confirm"@en ;
   form:required true;
   form:saveEmptyValue true ;
   form:order 1 .